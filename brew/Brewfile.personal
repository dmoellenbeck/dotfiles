# ============================================================================
# MAINTENANCE COMMANDS
# ============================================================================

# Install all applications in this file:
#   brew bundle install --file=Brewfile.personal

# Check what would be installed/upgraded:
#   brew bundle check --file=Brewfile.personal

# Cleanup (uninstall) apps not in this Brewfile:
#   brew bundle cleanup --file=Brewfile.personal
#   brew bundle cleanup --file=Brewfile.personal --force  # Skip confirmation

# Update Homebrew and upgrade all packages:
#   brew update && brew upgrade && brew upgrade --cask

# Generate a Brewfile from currently installed packages:
#   brew bundle dump --file=Brewfile.snapshot --force

# Compare with current installations:
#   comm -23 <(brew bundle list --file=Brewfile.personal | sort) <(brew list --formula && brew list --cask | sort)
